{
    "name": "stylesheets-ghost-theme-starter",
    "description": "Ghost handlebars theme starter by Stylesheets.dev",
    "demo": "https://demo.stylesheets.dev",
    "version": "1.0.0",
    "engines": {
        "ghost": ">=4.0.0",
        "ghost-api": "v4"
    },
    "screenshots": {
        "desktop": "assets/screenshot-desktop.jpg"
    },
    "scripts": {
        "dev": "gulp",
        "build": "gulp zip",
        "test": "gscan .",
        "test:ci": "gscan --fatal --verbose .",
        "pretest": "gulp build",
        "preship": "yarn test",
        "ship": "STATUS=$(git status --porcelain); echo $STATUS; if [ -z \"$STATUS\" ]; then yarn version && git push --follow-tags; fi"
    },
    "author": {
        "name": "Stylesheets.dev",
        "email": "support@stylesheets.dev",
        "url": "https://stylesheets.dev"
    },
    "gpm": {
        "type": "theme",
        "categories": [
            "Blog",
            "Magazine",
            "Portfolio",
            "Personal",
            "Project",
            "Travel",
            "Photography"
        ]
    },
    "keywords": [
        "ghost",
        "theme",
        "ghost-theme"
    ],
    "devDependencies": {
        "autoprefixer": "^9.0.0",
        "cssnano": "4.1.10",
        "gscan": "4.0.1",
        "gulp": "4.0.2",
        "gulp-livereload": "4.0.2",
        "gulp-postcss": "9.0.0",
        "gulp-sass": "^4.1.0",
        "gulp-sourcemaps": "3.0.0",
        "gulp-stylelint": "^13.0.0",
        "gulp-uglify": "3.0.2",
        "gulp-util": "3.0.8",
        "gulp-watch": "5.0.1",
        "gulp-zip": "5.1.0",
        "postcss-color-mod-function": "3.0.3",
        "postcss-easy-import": "3.0.0",
        "prettier": "^2.2.1",
        "stylelint": "^13.12.0",
        "stylelint-config-standard": "^21.0.0",
        "stylelint-prettier": "^1.2.0"
    },
    "browserslist": [
        "defaults"
    ],
    "config": {
        "posts_per_page": 15,
        "image_sizes": {
            "xxs": {
                "width": 30
            },
            "xs": {
                "width": 100
            },
            "s": {
                "width": 300
            },
            "m": {
                "width": 600
            },
            "l": {
                "width": 1200
            },
            "xl": {
                "width": 2000
            }
        }
    },
    "dependencies": {
        "postcss-reporter": "^7.0.2"
    }
}